<div class="container-cent">
	<h1 class="main-title">TheFacebookProject </h1>
</div>
<% if current_user %>
  	<h4 class="main-title">Connecté en tant que  <strong><%= current_user.email %>.</strong>
  	<%= link_to "Déconnexion", session_url(current_user), method: :delete, class: "btn btn-primary" %></h4>
<% else %>
<h4 class="main-title"><i class="em em-arrow_double_down"></i> Pour utiliser The Facebook vous devez vous <strong>Connecter</strong> ou bien vous <strong>Inscrire</strong> <i class="em em-arrow_double_down"></i><h4>
	<%=  link_to "Inscription", new_user_url , class: "btn btn-success", id:"ins" %>  
	<%=  link_to "Connexion", new_session_url , class: "btn btn-success ", id: "con" %> 
<% end %>
<p style="color: green" id="notice"><%= notice %></p>

<% Gossip.all.each do |gossip| %>
<div>
<div class="card" style="text-align: center; margin: 0 auto; width: 50%;">
  	<div class="card-header">
    	Gossip <%= gossip.id %>
  	</div>
  <div class="card-body">
    	<p class="card-text"><%= gossip.anonymous_author %></p>
    	<p class="card-text text"><%= gossip.content %></p>
  	</div>
  <%= link_to 'Show', gossip %>
	</div>
</div>
<br>
<% end %>
